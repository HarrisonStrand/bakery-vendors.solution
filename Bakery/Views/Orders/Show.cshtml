@{
  Layout = "_Layout";
}
<h1>Order Details: </h1>

<h2>Vendor: @Model["vendor"].VendorName</h2>
<h4>Title: @Model["order"].OrderTitle</h4>
<h4>Description: @Model["order"].OrderDescription</h4>
<h4>Price: $@Model["order"].OrderPrice.00</h4>
<h4>Date: @Model["order"].OrderDate</h4>

<h3><a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a></h3>
<h3><a href='/vendors'>View Vendor List</a></h3>